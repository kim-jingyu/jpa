<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <persistence-unit name="hello">
        <class>jpabasic.real.domain.Member</class>
        <class>jpabasic.real.domain.item.Item</class>
        <class>jpabasic.real.domain.Order</class>
        <class>jpabasic.real.domain.OrderItem</class>
        <class>jpabasic.real.domain.OrderStatus</class>
        <class>jpabasic.real.domain.Delivery</class>
        <class>jpabasic.real.domain.Category</class>
        <class>jpabasic.real.domain.DeliveryStatus</class>
        <class>jpabasic.real.domain.item.Album</class>
        <class>jpabasic.real.domain.item.Book</class>
        <class>jpabasic.real.domain.item.Movie</class>
        <properties>
            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/realjpa"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <!-- 옵션 -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>